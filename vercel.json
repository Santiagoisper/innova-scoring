{
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "dist/public",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "functions": {
    "api/[...path].ts": {
      "maxDuration": 60,
      "includeFiles": "{server,shared}/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/[...path].ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
